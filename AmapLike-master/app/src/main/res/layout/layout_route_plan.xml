        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/path_detail_traffic_light_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space12"
                android:layout_marginTop="@dimen/space12"
                android:layout_marginBottom="@dimen/space12"
                android:visibility="gone"
                tools:text="adadf"
                android:textSize="@dimen/font16"
                android:textColor="@color/textDefualt2"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/navi_start_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space08"
                android:layout_marginRight="@dimen/space08"
                android:paddingTop="@dimen/space08"
                android:paddingLeft="@dimen/space16"
                android:paddingRight="@dimen/space16"
                android:paddingBottom="@dimen/space08"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_btn_theme"
                android:text="@string/route_plan_start_navi"
                android:textColor="@color/white"
                android:textSize="@dimen/font16" />
        </RelativeLayout>



        <LinearLayout
            android:id="@+id/route_plan_poi_detail_layout"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="@dimen/space08">

            <TextView
                android:id="@+id/route_plan_poi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="搜索结果"
                android:textColor="@color/textDefualt"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/route_plan_poi_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space10"
                tools:text="具体位置"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/textDefualt2"
                android:textSize="14sp" />

        </LinearLayout>

