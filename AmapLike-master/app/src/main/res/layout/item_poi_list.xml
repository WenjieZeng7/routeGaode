<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/button_background_selector">

    <ImageButton
        android:id="@+id/search_location"
        android:layout_width="wrap_content"
        android:focusable="false"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_background_selector"
        android:src="@drawable/icon_location_poi" />



    <TextView
        android:id="@+id/search_result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/search_location"
        android:text="搜索结果"
        android:textColor="@color/textDefualt"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/search_result_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_result_name"
        android:layout_alignStart="@+id/search_result_name"
        android:layout_marginTop="5dp"
        android:text="具体位置"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textDefualt2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/search_result_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_result_name"
        android:layout_toRightOf="@id/search_result_distance"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginTop="5dp"
        android:text="具体位置"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textDefualt2"
        android:textSize="14sp" />

</RelativeLayout>