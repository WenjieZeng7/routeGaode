<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="RoutePlanActivity">
<!--android:descendantFocusability="beforeDescendants"-->


    <LinearLayout
        android:id="@+id/sheet_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space08"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="35dp"
            android:layout_height="@dimen/space04"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space06"
            android:background="@drawable/shape_bg_gray"
            />

        <LinearLayout
            android:id="@+id/route_plan_path_general_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space04"
            android:layout_marginRight="@dimen/space04"
            android:layout_marginTop="@dimen/space08"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/path_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/shape_bg_drive_general"
                >
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_green"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/route_plan_default"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/path_general_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/font18"
                    />

                <TextView
                    android:id="@+id/path_general_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/font18"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/path_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space08"
                android:orientation="vertical"
                android:background="@drawable/shape_bg_drive_general"
                >
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_green"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/route_plan_plan2"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/path_general_time1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/font18"
                    />

                <TextView
                    android:id="@+id/path_general_distance1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/font18"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/path_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space08"
                android:orientation="vertical"
                android:background="@drawable/shape_bg_drive_general"
                >
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_green"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/route_plan_plan3"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/path_general_time2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/font18"
                    />

                <TextView
                    android:id="@+id/path_general_distance2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/font18"
                    />
            </LinearLayout>

